@{
	ViewData["Title"] = "Index";
	Layout = "_AdminLayout";
}
@model IEnumerable<Game>
<div>
	<div class="row-cols-md-4">
		<a class="btn btn-primary" asp-area="Admin" asp-controller="Game" asp-action="AddGame">Oyun Ekle</a>
	</div>

	<table class="table table-striped">
		<thead>
			<tr>
				<th>#</th>
				<th>Game Name</th>
				<th>Genre</th>
				<th>Release Date</th>
				<th>Yönet</th>
			</tr>
		</thead>

		<tbody>
			@foreach (var game in Model)
			{
				<tr>
					<td>@game.Id</td>
					<td>@game.Name</td>
					<td>@(game.Genres.Any() ? game.Genres.First().Name : "")</td>
					<td>@game.Released.ToShortDateString()</td>
					<td>
						<a class="btn btn-primary" asp-area="Admin" asp-controller="Game" asp-action="Edit" asp-route-id="@game.Id">Düzenle</a>
						<a class="btn btn-warning">Sil</a>
					</td>
					
				</tr>
			}
		</tbody>
	</table>
</div>