@using MyWebApplication.ViewModel.Comment
@{
	Layout = null;
}
@model AddCommentViewModel

<div class="add-comment-section mt-5">
	<div class="comment-form-header mb-3">
		<h4 class="fw-bold">
			<i class="fas fa-pen-fancy me-2"></i>
			Yorum Ekle
		</h4>
		<p class="text-muted small">Düşüncelerinizi diğer oyuncularla paylaşın</p>
	</div>

	<form id="commentForm" class="comment-form">

		<input type="hidden" asp-for="GameId" value="@Model.GameId" />

		<div class="form-group mb-3">
			<div class="comment-input-wrapper">
				<textarea asp-for="@Model.Content"
						  class="form-control"
						  rows="4"
						  placeholder="Oyun hakkında ne düşünüyorsunuz?"></textarea>
				<span class="focus-border"></span>
			</div>
			<span asp-validation-for="@Model.Content" class="text-danger small"></span>
		</div>

		<div class="text-end">
			<button type="button" class="btn btn-primary" id="submitComment">
				<i class="fas fa-paper-plane me-2"></i>
				Yorum Gönder
			</button>
		</div>
	</form>
</div>

<style>
	.add-comment-section {
		background: #fff;
		border-radius: 1rem;
		padding: 2rem;
		box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
	}

	.comment-form-header {
		border-bottom: 2px solid #f8f9fa;
		padding-bottom: 1rem;
	}

	.comment-input-wrapper {
		position: relative;
	}

	.form-control {
		border: 1px solid #dee2e6;
		border-radius: 0.5rem;
		padding: 1rem;
		font-size: 0.95rem;
		transition: all 0.3s ease;
		background: #f8f9fa;
	}

		.form-control:focus {
			outline: none;
			box-shadow: none;
			border-color: #1e3c72;
			background: #fff;
		}

	.focus-border {
		position: absolute;
		bottom: 0;
		left: 50%;
		width: 0;
		height: 2px;
		background: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%);
		transition: all 0.3s ease;
		transform: translateX(-50%);
	}

	.form-control:focus + .focus-border {
		width: 100%;
	}

	.btn-primary {
		background: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%);
		border: none;
		padding: 0.75rem 1.5rem;
		border-radius: 0.5rem;
		font-weight: 500;
		transition: all 0.3s ease;
	}

		.btn-primary:hover {
			transform: translateY(-2px);
			box-shadow: 0 5px 15px rgba(0,0,0,0.2);
		}

	/* Placeholder stil */
	.form-control::placeholder {
		color: #adb5bd;
		font-size: 0.9rem;
	}

	/* Validation mesajları için stil */
	.text-danger {
		font-size: 0.85rem;
		margin-top: 0.5rem;
		display: block;
	}

	@@media (max-width: 768px) {
		.add-comment-section {
			padding: 1rem;
		}

		.btn-primary {
			width: 100%;
			margin-top: 1rem;
		}
	}
</style>

<script src="~/js/comment.js" asp-append-version="true"></script>