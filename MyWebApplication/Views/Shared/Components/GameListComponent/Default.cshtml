@model IEnumerable<Game>

<div class="container mt-5">
    <h2 class="text-center mb-4">Oyunlarým</h2>
    <div class="row g-4">
        @foreach (var game in Model)
        {
            <div class="col-md-3">
                <div class="card text-white bg-dark  shadow-sm h-100">
                    @* <img src="@game.CoverImageUrl" class="card-img-top" alt="@game.Name Cover Image"> *@
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@game.Name</h5>
                        <p class="card-text mb-1"><strong>Rating:</strong> @game.Rating</p>
                        <p class="card-text mb-1"><strong>Released:</strong> @game.Released.ToShortDateString()</p>
                        <div>
                            <strong>Genres:</strong>
                            <ul class="list-unstyled">
                                @foreach (var genre in game.Genres)
                                {
                                    <li>@genre.Name</li>
                                }
                            </ul>
                        </div>
                        <a href="/games/details/@game.Id" class="btn btn-light mt-auto">Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

