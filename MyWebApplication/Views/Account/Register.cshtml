@{
    ViewData["Title"] = "RegisterPage";
    Layout = null;
}

@model RegisterViewModel

<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>

<body style="background-color:gray;">
    <div class=" container mt-4 col-5" style="background-color:white">
        <div>
            <h3 class="text-center ">Yeni Hesap Oluştur</h3>
        </div>
        <div class="container col-4">
            <form asp-controller="Account" asp-action="Register" method="post">
                <div class="mb-3">
                    <label class="form-label">Name:</label>
                    <input class="form-control" asp-for="@Model.Name" placeholder="Name" />
                    <span class="text-danger" asp-validation-for="@Model.Name"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label">Surname:</label>
                    <input class="form-control" asp-for="@Model.Surname" placeholder="Surname" />
                    <span class="text-danger" asp-validation-for="@Model.Surname"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label">UserName:</label>
                    <input class="form-control" asp-for="@Model.UserName" placeholder="UserName" />
                    <span class="text-danger" asp-validation-for="@Model.UserName"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label">Email:</label>
                    <input class="form-control" asp-for="@Model.Email" placeholder="Email" />
                    <span class="text-danger" asp-validation-for="@Model.Email"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label">Parola:</label>
                    <input class="form-control" asp-for="@Model.Password"placeholder="Parola" />
                    <span class="text-danger" asp-validation-for="@Model.Password"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label">Parolayı Onayla:</label>
                    <input class="form-control" asp-for="@Model.ConfirmPassword" placeholder="Parola" />
                    <span class="text-danger" asp-validation-for="@Model.ConfirmPassword"></span>
                </div>
                <div class="text-danger" asp-validation-summary=ModelOnly>
                    
                </div>
                <button class="btn btn-primary mb-4  " type="submit">Kayıt Ol</button>
            </form>
        </div>
    </div>
</body>