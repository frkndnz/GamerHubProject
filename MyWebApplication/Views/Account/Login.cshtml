@using MyWebApplication.ViewModel.Account
@{
	Layout = null;
	ViewData["Title"] = "LoginPage";
}
@model LoginViewModel

<head>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>

<body>
	<div class=" container mt-4 col-5" style="background-color:white">
		<div>
			<h3 class="text-center ">Giriş Yap</h3>
		</div>
		<div class="container col-4">
			<form asp-controller="Account" asp-action="Login" method="post">
				<div class="mb-3">
					<label class="form-label">Email</label>
					<input class="form-control" asp-for="@Model.Email" placeholder="Email">
					<span class="text-danger" asp-validation-for="@Model.Email"></span>
				</div>
				<div class="mb-3">
					<label class="form-label">Password</label>
					<input class="form-control" asp-for="@Model.Password" placeholder="Password">
					<span class="text-danger" asp-validation-for="@Model.Password"></span>
				</div>
				<div class="mb-3">
					<button type="submit" class="btn btn-primary">Giriş Yap</button>
				</div>
				<div>
					<a class="btn btn-primary" asp-controller="Account" asp-action="Register">Kayıt Ol!</a>

				</div>
				<div class="text-danger" asp-validation-summary=ModelOnly>
				</div>
			</form>
		</div>
	</div>>
</body>