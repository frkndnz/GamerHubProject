@using MyWebApplication.ViewModel.Account
@{
    Layout = null;
    ViewData["Title"] = "Giriş Yap";
}
@model LoginViewModel

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GamerHub</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
</head>

<body class="login-page">
    <div class="container">
        <div class="row justify-content-center align-items-center min-vh-100">
            <div class="col-md-6 col-lg-4">
                <div class="card shadow-lg border-0">
                    <div class="card-body p-5">
                        <!-- Logo ve Başlık -->
                        <div class="text-center mb-4">
                            <i class="fas fa-gamepad fa-3x text-primary mb-3"></i>
                            <h2 class="fw-bold">Hoş Geldiniz</h2>
                            <p class="text-muted">Hesabınıza giriş yapın</p>
                        </div>

                        <form asp-controller="Account" asp-action="Login" method="post">
                            <!-- Email Input -->
                            <div class="form-floating mb-3">
                                <input type="email" class="form-control" asp-for="@Model.Email" id="email" placeholder="name@example.com">
                                <label for="email"><i class="fas fa-envelope me-2"></i>Email</label>
                                <span class="text-danger small" asp-validation-for="@Model.Email"></span>
                            </div>

                            <!-- Password Input -->
                            <div class="form-floating mb-3">
                                <input type="password" class="form-control" asp-for="@Model.Password" id="password" placeholder="Password">
                                <label for="password"><i class="fas fa-lock me-2"></i>Şifre</label>
                                <span class="text-danger small" asp-validation-for="@Model.Password"></span>
                            </div>

                            <!-- Remember Me Checkbox -->
                            <div class="form-check mb-3">
                                <input class="form-check-input" type="checkbox" id="rememberMe">
                                <label class="form-check-label text-muted" for="rememberMe">
                                    Beni Hatırla
                                </label>
                            </div>

                            <!-- Login Button -->
                            <button type="submit" class="btn btn-primary w-100 mb-3">
                                <i class="fas fa-sign-in-alt me-2"></i>Giriş Yap
                            </button>

                            <!-- Register Link -->
                            <div class="text-center">
                                <p class="text-muted">Hesabınız yok mu?</p>
                                <a class="btn btn-outline-primary w-100" asp-controller="Account" asp-action="Register">
                                    <i class="fas fa-user-plus me-2"></i>Yeni Hesap Oluştur
                                </a>
                            </div>

                            <!-- Validation Summary -->
                            <div class="mt-3">
                                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <style>
        .login-page {
            background: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%);
            min-height: 100vh;
        }

        .card {
            border-radius: 1rem;
            backdrop-filter: blur(10px);
            background: rgba(255, 255, 255, 0.95);
        }

        .form-control {
            border-radius: 0.5rem;
            border: 1px solid #dee2e6;
            padding: 0.75rem 1rem;
        }

            .form-control:focus {
                box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.15);
            }

        .form-floating label {
            padding-left: 1rem;
        }

        .btn {
            padding: 0.75rem 1rem;
            border-radius: 0.5rem;
            font-weight: 500;
            transition: all 0.3s ease;
        }

        .btn-primary {
            background: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%);
            border: none;
        }

            .btn-primary:hover {
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(0,0,0,0.2);
            }

        .btn-outline-primary {
            border: 2px solid #1e3c72;
        }

            .btn-outline-primary:hover {
                background: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%);
                border-color: transparent;
                transform: translateY(-2px);
            }

        .form-check-input:checked {
            background-color: #1e3c72;
            border-color: #1e3c72;
        }

        @@media (max-width: 768px) {
            .card-body

        {
            padding: 2rem !important;
        }

        }
    </style>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>