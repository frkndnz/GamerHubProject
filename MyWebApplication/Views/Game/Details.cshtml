@using MyWebApplication.ViewModel.Game
@{
    ViewData["Title"] = "Details Page";
    Layout = "_DefaultLayout";
}
@model GameDetailViewModel
<div class="container mt-5">
    <!-- Game Details Card -->
    <div class="card mb-4 shadow-sm">
        <div class="row g-0">
            <div class="col-md-4">
                <img src="~/images/@Model.ImageURL" class="img-fluid rounded-start" alt="Game Image">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h3 class="card-title">@Model.Name</h3>
                    <p class="card-text text-muted">Released: @Model.Released.ToString("MMMM dd, yyyy")</p>
                    <p class="card-text">@Model.Description</p>
                    <p class="card-text">
                        <strong>Rating:</strong>
                        <span class="badge bg-success">@Model.Rating</span>
                    </p>
                    <div>
                        <strong>Genres:</strong>
                        <ul class="list-inline">
                            @foreach (var genre in Model.GenreDTOs)
                            {
                                <li class="list-inline-item">
                                    <span class="badge bg-primary">@genre.Name</span>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Back Button -->
    <div class="text-center">
        <a href="/" class="btn btn-secondary">Back to Games List</a>
    </div>
</div>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
